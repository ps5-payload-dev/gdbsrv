LINUX_HOST ?= localhost

BIN  := payload-linux.elf
SRCS := payload.c

CFLAGS := -Wall -Werror -g
LDADD :=

all: $(BIN)

clean:
	rm -rf $(BIN)

$(BIN): $(SRCS)
	$(CC) $(CFLAGS) $(LDADD) -o $@ $^

test: $(BIN)
	gdb \
	-ex "target extended-remote $(LINUX_HOST):2159" \
	-ex "file $(BIN)" \
	-ex "remote put $(BIN) /tmp/$(BIN)" \
	-ex "set remote exec-file /tmp/$(BIN)" \
	-ex "start"
